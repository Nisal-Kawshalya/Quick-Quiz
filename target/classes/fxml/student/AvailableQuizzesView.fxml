<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.quizapp.controllers.student.AvailableQuizzesController"
           styleClass="root">

    <BorderPane maxWidth="1000">

        <!-- ===== TOP BAR ===== -->
        <top>
            <HBox alignment="CENTER_RIGHT"
                  spacing="10"
                  styleClass="top-bar">
                <Button text="Logout"
                        onAction="#handleLogout"
                        styleClass="logout-btn"/>
            </HBox>
        </top>

        <!-- ===== CONTENT ===== -->
        <center>
            <ScrollPane fitToWidth="true"
                        hbarPolicy="NEVER"
                        vbarPolicy="AS_NEEDED"
                        styleClass="scroll-pane">

                <VBox spacing="30"
                      alignment="CENTER"
                      styleClass="dashboard-container">

                    <Label text="Available Quizzes"
                           styleClass="dashboard-title"/>

                    <VBox fx:id="quizList"
                          spacing="20"
                          styleClass="quiz-list"/>

                </VBox>
            </ScrollPane>
        </center>

    </BorderPane>

</StackPane>
