<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.quizapp.controllers.quiz.CreateQuizController"
           styleClass="root">

    <BorderPane>

        <!-- ================= TOP BAR ================= -->
        <top>
            <HBox alignment="CENTER_RIGHT"
                  spacing="10"
                  styleClass="top-bar">
                <Button text="Logout"
                        onAction="#handleLogout"
                        styleClass="logout-btn"/>
            </HBox>
        </top>

        <!-- ================= CENTER CONTENT ================= -->
        <center>
            <ScrollPane fitToWidth="true"
                        hbarPolicy="NEVER"
                        vbarPolicy="AS_NEEDED"
                        styleClass="scroll-pane">

                <!-- ðŸ”‘ THIS STACKPANE CENTERS THE FORM -->
                <StackPane alignment="TOP_CENTER">

                    <VBox fx:id="mainContainer"
                          spacing="18"
                          alignment="CENTER"
                          styleClass="quiz-container">

                        <!-- TITLE -->
                        <Label text="Create New Quiz" styleClass="title"/>

                        <!-- QUIZ INFO -->
                        <TextField fx:id="titleField"
                                   promptText="Quiz Title"/>

                        <TextField fx:id="timeField"
                                   promptText="Time Limit (seconds)"/>

                        <Separator/>

                        <!-- QUESTIONS LIST -->
                        <Label text="Questions Added"
                               styleClass="section-title"/>

                        <VBox fx:id="questionsList"
                              spacing="10"/>

                        <Separator/>

                        <!-- ADD QUESTION -->
                        <Label text="Add New Question"
                               styleClass="section-title"/>

                        <TextField fx:id="questionField"
                                   promptText="Question text"/>

                        <TextField fx:id="option1Field"
                                   promptText="Option 1"/>

                        <TextField fx:id="option2Field"
                                   promptText="Option 2"/>

                        <TextField fx:id="option3Field"
                                   promptText="Option 3"/>

                        <TextField fx:id="option4Field"
                                   promptText="Option 4"/>

                        <!-- CORRECT ANSWER -->
                        <Label text="Correct Answer"/>

                        <HBox spacing="12" alignment="CENTER">
                            <RadioButton fx:id="correct1" text="Option 1"/>
                            <RadioButton fx:id="correct2" text="Option 2"/>
                            <RadioButton fx:id="correct3" text="Option 3"/>
                            <RadioButton fx:id="correct4" text="Option 4"/>
                        </HBox>

                        <!-- ACTIONS -->
                        <Button text="Add Question"
                                onAction="#addQuestion"
                                styleClass="secondary-btn"/>

                        <Label fx:id="statusLabel"
                               styleClass="status-text"/>

                        <Separator/>

                        <Button text="Save Quiz"
                                onAction="#saveQuiz"
                                styleClass="primary-btn"/>

                    </VBox>

                </StackPane>
            </ScrollPane>
        </center>

    </BorderPane>
</StackPane>
