<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.quizapp.controllers.quiz.TakeQuizController"
           styleClass="root">

    <!-- MAIN LAYOUT -->
    <BorderPane maxWidth="900">

        <!-- ===== TOP BAR ===== -->
        <top>
            <HBox alignment="CENTER_RIGHT"
                  spacing="10"
                  styleClass="top-bar">
                <Button text="Logout"
                        onAction="#handleLogout"
                        styleClass="logout-btn"/>
            </HBox>
        </top>

        <!-- ===== CENTER CONTENT ===== -->
        <center>
            <VBox spacing="24"
                  alignment="CENTER"
                  styleClass="quiz-container">

                <!-- Timer -->
                <Label fx:id="timerLabel"
                       styleClass="timer-label"/>

                <!-- Progress -->
                <Label fx:id="progressLabel"
                       styleClass="progress"/>

                <!-- Quiz Card -->
                <VBox spacing="20"
                      alignment="CENTER"
                      styleClass="quiz-card">

                    <!-- Question -->
                    <Label fx:id="questionLabel"
                           wrapText="true"
                           styleClass="question"/>

                    <!-- Options -->
                    <VBox fx:id="optionsBox"
                          spacing="12"/>

                    <!-- Next Button -->
                    <Button text="Next"
                            onAction="#nextQuestion"
                            styleClass="primary-btn"/>

                </VBox>
            </VBox>
        </center>

    </BorderPane>

</StackPane>
