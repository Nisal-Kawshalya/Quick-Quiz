<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.quizapp.controllers.auth.RegisterController"
           styleClass="root">

    <VBox fx:id="registerCard"
          alignment="CENTER"
          spacing="18"
          maxWidth="400"
          styleClass="login-card">

        <Label text="Create Account" styleClass="title"/>
        <Label text="Join the quiz platform" styleClass="subtitle"/>

        <TextField fx:id="nameField"
                   promptText="Full Name"
                   styleClass="input"/>

        <TextField fx:id="emailField"
                   promptText="Email Address"
                   styleClass="input"/>

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       styleClass="input"/>

        <ComboBox fx:id="roleBox"
                  promptText="Select Role"
                  styleClass="input"/>

        <Button text="Register"
                onAction="#handleRegister"
                styleClass="primary-button"/>

        <Button text="Back to Login"
                onAction="#goToLogin"
                styleClass="secondary-button"/>

        <Label fx:id="messageLabel"
               styleClass="error"/>

    </VBox>

</StackPane>
