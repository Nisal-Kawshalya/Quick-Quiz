<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.quizapp.controllers.auth.LoginController"
           alignment="CENTER"
           styleClass="root">

    <VBox fx:id="loginCard"
          alignment="CENTER"
          spacing="18"
          maxWidth="380"
          styleClass="login-card">

        <Label text="QuizMaster Pro" styleClass="app-title"/>

        <Label text="Welcome Back" styleClass="title"/>
        <Label text="Login to your account" styleClass="subtitle"/>

        <TextField fx:id="emailField"
                   promptText="Email or Username"
                   styleClass="input"/>

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       styleClass="input"/>

        <Button text="Login"
                onAction="#handleLogin"
                styleClass="primary-button"/>

        <Button text="Create Account"
                onAction="#goToRegister"
                styleClass="secondary-button"/>

        <Label fx:id="errorLabel"
               styleClass="error"/>

    </VBox>

</StackPane>
