<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.quizapp.controllers.dashboard.TeacherDashboardController"
           alignment="TOP_CENTER"
           styleClass="root">

    <ScrollPane fitToWidth="true"
                hbarPolicy="NEVER"
                vbarPolicy="AS_NEEDED"
                styleClass="scroll-pane">

        <VBox spacing="24"
              alignment="CENTER"
              styleClass="dashboard-container">

            <!-- Title -->
            <Label text="Teacher Dashboard"
                   styleClass="dashboard-title"/>

            <!-- Action Card -->
            <VBox spacing="12"
                  alignment="CENTER"
                  styleClass="card">

                <Label text="Manage Your Quizzes"
                       styleClass="section-title"/>

                <Button text="Create Quiz"
                        onAction="#goToCreateQuiz"
                        styleClass="primary-btn"/>

            </VBox>

            <!-- Quiz List -->
            <VBox fx:id="quizList"
                  spacing="12"
                  styleClass="quiz-list"/>

            <!-- Logout -->
            <Button text="Logout"
                    onAction="#handleLogout"
                    styleClass="logout-btn"/>

        </VBox>

    </ScrollPane>

</StackPane>
