<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.quizapp.controllers.dashboard.ViewResultsController"
           styleClass="root">

    <VBox alignment="CENTER"
          spacing="25"
          styleClass="dashboard-container">

        <!-- PAGE TITLE -->
        <Label text="Student Quiz Results"
               styleClass="title"/>

        <!-- RESULTS CARD -->
        <VBox fx:id="resultsContainer"
              spacing="12"
              styleClass="result-card"/>

        <!-- BACK BUTTON -->
        <Button text="Back to Dashboard"
                onAction="#goBack"
                styleClass="primary-btn"/>

    </VBox>

</StackPane>
