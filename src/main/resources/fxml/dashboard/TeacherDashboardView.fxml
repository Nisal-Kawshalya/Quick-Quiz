<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.quizapp.controllers.dashboard.TeacherDashboardController"
           styleClass="root">

    <ScrollPane fitToWidth="true"
                hbarPolicy="NEVER"
                vbarPolicy="AS_NEEDED">

        <!-- OUTER FULL-WIDTH CONTAINER (forces centering) -->
        <VBox alignment="CENTER"
              style="-fx-padding: 40 0;">

            <!-- INNER FIXED-WIDTH DASHBOARD (ACTUALLY CENTERED) -->
            <VBox fx:id="dashboardWrapper"
                  spacing="30"
                  maxWidth="900"
                  alignment="CENTER"
                  styleClass="dashboard-container">

                <!-- TITLE -->
                <Label text="Teacher Dashboard"
                       styleClass="dashboard-title"/>

                <!-- CREATE QUIZ CARD -->
                <VBox alignment="CENTER"
                      spacing="12"
                      styleClass="manage-card">

                    <Label text="Manage Your Quizzes"
                           styleClass="section-title"/>

                    <Button text="Create Quiz"
                            onAction="#goToCreateQuiz"
                            styleClass="create-btn"/>
                </VBox>

                <!-- QUIZ LIST -->
                <VBox fx:id="quizList"
                      spacing="16"
                      maxWidth="900"/>

                <!-- LOGOUT -->
                <Button text="Logout"
                        onAction="#handleLogout"
                        styleClass="logout-btn"/>

            </VBox>
        </VBox>

    </ScrollPane>

</StackPane>
