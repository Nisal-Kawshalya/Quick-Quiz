<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.quizapp.controllers.student.AvailableQuizzesController"
           alignment="TOP_CENTER"
           styleClass="root">

    <ScrollPane fitToWidth="true"
                hbarPolicy="NEVER"
                vbarPolicy="AS_NEEDED"
                styleClass="scroll-pane">

        <VBox spacing="24"
              alignment="CENTER"
              styleClass="dashboard-container">

            <Label text="Available Quizzes"
                   styleClass="dashboard-title"/>

            <!-- Quiz list -->
            <VBox fx:id="quizList"
                  spacing="16"
                  styleClass="quiz-list"/>

        </VBox>

    </ScrollPane>

</StackPane>
