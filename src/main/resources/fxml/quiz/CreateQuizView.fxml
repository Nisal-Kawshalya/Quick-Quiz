<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.quizapp.controllers.quiz.CreateQuizController">

    <VBox alignment="CENTER" spacing="15" fx:id="mainContainer" style="-fx-padding: 20;">
        <Label text="Create New Quiz" styleClass="title"/>

        <!-- Quiz Info -->
        <TextField fx:id="titleField" promptText="Quiz Title" prefWidth="400"/>
        <TextField fx:id="timeField" promptText="Time Limit (seconds)" prefWidth="400"/>

        <Separator/>

        <!-- Previously Created Questions -->
        <Label text="Questions Added:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <VBox fx:id="questionsList" spacing="10" style="-fx-padding: 10; -fx-pref-width: 500;"/>

        <Separator/>

        <!-- Question Form -->
        <Label text="Add New Question" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

        <TextField fx:id="questionField" promptText="Question text" prefWidth="400"/>

        <TextField fx:id="option1Field" promptText="Option 1" prefWidth="400"/>
        <TextField fx:id="option2Field" promptText="Option 2" prefWidth="400"/>
        <TextField fx:id="option3Field" promptText="Option 3" prefWidth="400"/>
        <TextField fx:id="option4Field" promptText="Option 4" prefWidth="400"/>

        <!-- Correct Answer -->
        <Label text="Correct Answer" style="-fx-font-size: 12px;"/>

        <RadioButton text="Option 1" fx:id="correct1"/>
        <RadioButton text="Option 2" fx:id="correct2"/>
        <RadioButton text="Option 3" fx:id="correct3"/>
        <RadioButton text="Option 4" fx:id="correct4"/>

        <Button text="Add Question"
                onAction="#addQuestion" prefWidth="200"/>

        <Label fx:id="statusLabel"/>

        <Separator/>

        <Button text="Save Quiz"
                onAction="#saveQuiz" prefWidth="200" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

    </VBox>

</ScrollPane>
